<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white"/> <!-- Background color of the search bar -->
    <corners android:radius="16dp"/> <!-- Radius to make the corners rounded -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/> <!-- Padding inside the search bar -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"/> <!-- Optional: Border around the search bar -->
</shape>
