<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fragment_employees_training_check_toolbox_talks">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_training"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Toolbar -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_toolbar_background"
                    android:elevation="8dp"
                    android:layout_marginTop="20dp"
                    app:navigationIcon="@drawable/ic_back_arrow"> <!-- Back Arrow Icon -->

                    <TextView
                        android:id="@+id/tv_course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                </androidx.appcompat.widget.Toolbar>

                <!-- Employee List Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employees list"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <!-- Month Label and Spinner -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Month Label -->
                    <TextView
                        android:id="@+id/tv_month_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <!-- Month Spinner -->
                    <Spinner
                        android:id="@+id/spinner_months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:entries="@array/months_array" />
                </LinearLayout>

                <!-- Employee List -->
                <ListView
                    android:id="@+id/employee_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    android:padding="16dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Save Button pinned to bottom -->
        <Button
            android:id="@+id/btn_save_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Training"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
