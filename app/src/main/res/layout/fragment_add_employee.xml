<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.AddEmployeeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_toolbar_background"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            app:navigationIcon="@drawable/ic_back_arrow"> <!-- Back Arrow Icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Employee"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    <!-- Form container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="30dp"
        android:layout_margin="15dp"
        android:elevation="5dp"
        android:layout_gravity="center_horizontal">

        <!-- Name Field -->
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/blue"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="10dp"/>

        <!-- Surname Field -->
        <EditText
            android:id="@+id/edt_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:textColorHint="@color/blue"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="20dp"/>

        <!-- Employee Number Field -->
        <EditText
            android:id="@+id/edt_employee_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee Number"
            android:textColorHint="@color/blue"
            android:textColor="@color/black"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="20dp"/>

        <!-- site Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Sites"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/cb_site1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site 1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/cb_site2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site 2"
            android:textColor="@color/black"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/cb_site3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site 3"
            android:textColor="@color/black"
            android:layout_marginTop="10dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Register"
            app:backgroundTint="@color/blue"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    </LinearLayout>

    </LinearLayout>
